{
  "manifest_version": 3,
  "name": "Burnout Guard - Cloud-Yug",
  "version": "1.0.0",
  "description": "Detects digital burnout patterns and helps you recover focus with gentle, research-backed interventions. AI-powered focus tracking and productivity enhancement.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "idle",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "chunks/*", "lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
